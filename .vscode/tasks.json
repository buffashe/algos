{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "clang++ build and run active file",
            "command": "/usr/bin/clang++",
            "args": [
                "${file}",
                "-o",
                "${fileBasenameNoExtension}",
                "-Oz",
                "-std=c++17;",
                "echo",
                "----------------------------;",
                "./${fileBasenameNoExtension}",
                "<",
                "${fileDirname}/input${fileBasenameNoExtension}.txt;",
                "/bin/rm",
                "${fileBasenameNoExtension};"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17;",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}